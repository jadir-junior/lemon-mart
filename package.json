{
  "name": "lemon-mart",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "test:debug": "ng test -- --source-map",
    "test:coverage": "ng test -- --code-coverage",
    "test:ci": "ng test --browsers ChromeHeadless --code-coverage --watch=false",
    "test:pre-push": "ng test --browsers ChromeHeadless --code-coverage --watch=false",
    "style": "import-sort -l '**/{src,tests,e2e}/**/*.ts' && prettier --check '**/{src,tests,e2e}/**/*.{*.css,ts}'",
    "style:fix": "import-sort --write '**/{src,tests,e2e}/**/*.ts' && prettier --write '**/{src,tests,e2e}/**/*.{*css,ts}' && js-beautify '**/src/**/*.html'",
    "lint": "ng lint --max-warnings=0",
    "lint:staged": "eslint src --max-warnings=0",
    "prepare": "husky install",
    "pre-commit": "lint-staged",
    "pre-push": "npm run test:pre-push"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~13.0.0",
    "@angular/cdk": "^13.1.1",
    "@angular/common": "~13.0.0",
    "@angular/compiler": "~13.0.0",
    "@angular/core": "~13.0.0",
    "@angular/fire": "^7.2.0",
    "@angular/flex-layout": "^13.0.0-beta.36",
    "@angular/forms": "~13.0.0",
    "@angular/material": "^13.1.1",
    "@angular/platform-browser": "~13.0.0",
    "@angular/platform-browser-dynamic": "~13.0.0",
    "@angular/router": "~13.0.0",
    "firebase": "^9.6.1",
    "jwt-decode": "^3.1.2",
    "rxfire": "^6.0.0",
    "rxjs": "~7.4.0",
    "subsink": "^1.0.2",
    "tslib": "^2.3.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/architect": "^0.1301.2",
    "@angular-devkit/build-angular": "~13.1.2",
    "@angular-eslint/builder": "13.0.1",
    "@angular-eslint/eslint-plugin": "13.0.1",
    "@angular-eslint/eslint-plugin-template": "13.0.1",
    "@angular-eslint/schematics": "13.0.1",
    "@angular-eslint/template-parser": "13.0.1",
    "@angular/cli": "~13.1.2",
    "@angular/compiler-cli": "~13.0.0",
    "@types/jasmine": "~3.10.0",
    "@types/jwt-decode": "^3.1.0",
    "@types/node": "^17.0.7",
    "@typescript-eslint/eslint-plugin": "5.8.0",
    "@typescript-eslint/parser": "5.8.0",
    "angular-unit-test-helper": "^12.0.0",
    "eslint": "^8.5.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "fake-jwt-sign": "^1.1.1",
    "husky": "^7.0.4",
    "import-sort": "^6.0.0",
    "import-sort-cli": "^6.0.0",
    "import-sort-parser-typescript": "^6.0.0",
    "jasmine-core": "~3.10.0",
    "js-beautify": "^1.14.0",
    "karma": "~6.3.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.1.0",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "~1.7.0",
    "lint-staged": "^12.1.4",
    "prettier": "^2.5.1",
    "typescript": "~4.4.3"
  },
  "importSort": {
    ".ts, .tsx": {
      "style": "eslint",
      "parser": "typescript"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,css,html}": [
      "npm run style"
    ],
    "src/**/*.ts": [
      "npm run lint:staged"
    ]
  }
}
